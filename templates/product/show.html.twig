{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="wrapper">
    <h1>Товар</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Дата добавления</th>
                <td>{{ product.date ? product.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ product.about }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">Вернуться к списку</a>
</div>
{% endblock %}
